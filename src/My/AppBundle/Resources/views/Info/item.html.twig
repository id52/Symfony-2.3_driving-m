{% extends 'AppBundle::layout_new.html.twig' %}

{% block content %}
<nav class="path">
    <a href="{{ path('homepage') }}">{{ 'titles.homepage'|trans([],'info') }}</a>
    » <a href="{{ path('infos') }}">{{ 'titles.infos'|trans([],'info') }}</a>
    » <strong>{{ info.title }}</strong>
</nav>

<div class="mainContent">
    <div class="title"><h1>{{ 'titles.infos'|trans([],'info') }}</h1></div>
    <div class="notice-main">
        <div class="title">
            <span class="date">{{ info.releaseTime|localizeddate('long', 'none') }}</span>
            {{ info.title }}
        </div>
        {{ info.text|raw }}
    </div>
</div>
{% endblock content %}
